<ul class="task-list">
    {{#each tasks}}
        <li>
            <a href="/all" class="title">{{this.title}}</a>
            <div class="actions">
                <a href="/all"><i class="bi bi-check2"></i></a>
                <a href="/all"><i class="bi bi-pencil-square"></i></a>
        
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" value="{{ this.id }}" name="id">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>