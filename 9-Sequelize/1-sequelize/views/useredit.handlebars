<h1>Editando um usuário > {{user.name}} <</h1>

<form action="/users/update" method="POST" class="form">  

  <input type="hidden" name="id" value="{{user.id}}">

  <div class="form-control">
    <label for="name">Nome </label>
    <input type="text" name="name" placeholder="Insira um nome de usuário" value="{{user.name}}">
  </div>

  <div class="form-control">
    <label for="occupation">Profissão </label>
    <input type="text" name="occupation" placeholder="Insira a profissão" value="{{user.occupation}}">
  </div>

  <div class="form-control form-checkbox">

    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" checked>
    {{else}}  
      <input type="checkbox" name="newsletter">
    {{/if}}

    <label for="newsletter">Enviar promoção? </label>
  </div>

  <input class="send-input" type="submit" value="Editar">
</form>

<div class="address-container">
  <h2>Endereços</h2>
  <form action="/address/create" method="POST">
    <input type="hidden" name="UserId" value="{{user.id}}">

    <div class="form-control">
      <label for="street">Rua </label>
      <input type="text" name="street" placeholder="Insira o nome da rua">
    </div>

    <div class="form-control">
      <label for="number">Numero </label>
      <input type="text" name="number" placeholder="Insira o número da residência">
    </div>

    <div class="form-control">
      <label for="city">Cidade </label>
      <input type="text" name="city" placeholder="Insira o nome da cidade">
    </div>

    <input class="send-input" type="submit" value="Incluir endereço">
  </form>

  <div class="address-list">
    <h2>Seus endereços</h2>

    {{#each user.Addresses}}
      <div class="p-list">
        <p>{{this.street}}</p>
        <p>{{this.number}}</p>
        <p>{{this.city}}</p>

        <form action="/address/delete" method="POST">
          <input type="hidden" name="id" value="{{this.id}}">
          <input type="hidden" name="UserId" value="{{this.UserId}}">
          <input class="remove-input" type="submit" value="Remover endereço">
        </form>
      </div>
    {{/each}}
  </div>
</div>